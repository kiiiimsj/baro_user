<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <!--  Menu Style  -->
    <style name="bottomTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="android:textColor">@color/gray</item>
        <!-- Background color when SELECTED -->
        <item name="android:textColorHighlight">@color/black</item>
    </style>

    <!-- Bottom Item text style-->
    <style name="bottom_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">9sp</item>
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">-0.02</item>
    </style>

    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingBottom">0dp</item>
    </style>


</resources>