<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base application theme. -->
    <!-- 화면 관련 style  -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Base application theme.
             Defining this lets values-v21/styles.xml reuse it with changes. -->
        <item name = "android:windowBackground">@color/white</item>
    </style>
    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used, for instance, for the default ActionBar
             (but not Toolbar) background.
              We specify the same color for the toolbar background in
              toolbar.xml.. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark is used for the status bar (with the
             battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for
             colorControlActivated which is used to tint widgets. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  Menu Style  -->
    <style name="bottomTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="android:textColor">@color/gray</item>
        <!-- Background color when SELECTED -->
        <item name="android:textColorHighlight">@color/black</item>
    </style>

    <!--  ActionBar Style  -->

    <!-- Bottom Item text style-->
    <style name="bottom_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">9sp</item>
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">-0.02</item>
    </style>

