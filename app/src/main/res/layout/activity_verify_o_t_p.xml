<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".VerifyOTP">
    <fragment
        android:id="@+id/top_bar"
        android:name="com.example.wantchu.Fragment.TopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:includeFontPadding="false"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/notosans_regular"
        android:text="BARO"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/register_title"
        android:textSize="24sp"
        android:layout_below="@id/imageView"
        android:text="회원가입"
        android:letterSpacing="-0.02"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_black"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"/>
    <RelativeLayout
        android:padding="20dp"
        android:layout_marginTop="27dp"
        android:layout_below="@id/register_title"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/login_background">

        <TextView
            android:id="@+id/otp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:letterSpacing="-0.02"
            android:text="문자 인증"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:layout_marginTop="58dp" />

        <com.chaos.view.PinView
            android:layout_marginTop="40dp"
            android:gravity="center"
            style="@style/PinWidget.PinView"
            android:layout_below="@id/otp_text"
            android:layout_centerHorizontal="true"
            android:id="@+id/pin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:inputType="number"
            android:itemBackground="@color/white"
            app:cursorColor="@color/black"
            app:itemCount="6"
            app:itemHeight="50dp"
            app:itemRadius="5dp"
            app:itemWidth="50dp"
            app:lineColor="@color/main"
            app:lineWidth="1dp" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_below="@id/pin_view"
            android:layout_centerHorizontal="true"
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02 : 00 분"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:layout_below="@id/timer"
            android:layout_marginTop="40dp"
            android:id="@+id/verify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_full"
            android:onClick="onClickVerify"
            android:text="입력하기"
            android:textSize="16dp"
            android:fontFamily="@font/notosans_bold"
            android:textColor="@color/white" />
    </RelativeLayout>


</RelativeLayout>