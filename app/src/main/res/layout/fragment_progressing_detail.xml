<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="2dp"
    android:layout_marginBottom="1dp"
    android:layout_height="500dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_bold"
            android:padding="5dp"
            android:text="도스마스 숭실대점"
            android:textColor="#343434"
            android:textSize="20sp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/deleteThis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            android:src="@drawable/close_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="7"
        android:background="@color/white"

        android:id="@+id/ProgressDetailList"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#343434"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:text="요청 사항"/>
        <TextView
            android:id="@+id/request"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#c4c4c4"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:text="요청사항이 없었습니다. "/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
<!--        <TextView-->
<!--            android:id="@+id/discount_rate_price"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:text="바로 할인 금액 : "-->
<!--            android:textSize="11sp"-->
<!--            android:textColor="@color/main"-->
<!--            android:fontFamily="@font/notosans_bold"-->
<!--            android:includeFontPadding="false"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            />-->
        <TextView
            android:id="@+id/discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="총 할인 금액 : "
            android:textSize="11sp"
            android:textColor="@color/main"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_below="@id/discount_price"
            android:layout_alignParentEnd="true"
            android:id="@+id/totals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="총 결제 금액 : "
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/main"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"/>

    </RelativeLayout>
    <Button
        android:id="@+id/okay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_border_5dp_stroke_2dp_main"
        android:text="확 인"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_bold"/>

</LinearLayout>