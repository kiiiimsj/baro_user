<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="18dp"
                android:id="@+id/baro_logo"
                android:layout_alignParentLeft="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="32dp"
                android:padding="5dp"/>
            <LinearLayout
                android:id="@+id/linear"
                android:layout_toRightOf="@id/baro_logo"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/menu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/baro_logo"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="center_vertical"
                    android:text="아메리카노"
                    android:includeFontPadding="false"
                    android:textSize="11sp"
                    android:textColor="#343434"
                    android:letterSpacing="-0.03" />
                <TextView
                    android:id="@+id/subscription"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:layout_toRightOf="@id/baro_logo"
                    android:layout_toLeftOf="@id/menu_price"
                    android:layout_below="@id/menu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_light"
                    android:textSize="11sp"
                    android:textColor="#343434"
                    android:letterSpacing="-0.03"
                    android:text="abcdefg"/>
            </LinearLayout>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@id/sold_out"
                android:id="@+id/menu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/linear"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/notosans_black"
                android:includeFontPadding="false"
                android:text="1500원"
                android:textSize="11sp"
                android:textColor="#343434"
                android:letterSpacing="-0.03" />

            <TextView
                android:id="@+id/menu_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <TextView
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:id="@+id/sold_out"
                android:includeFontPadding="false"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/layout_radius_3dp_color_main"
                android:fontFamily="@font/notosans_regular"
                android:text="품절"
                android:textSize="10sp"
                android:textColor="@color/white"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#c4c4c4"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>