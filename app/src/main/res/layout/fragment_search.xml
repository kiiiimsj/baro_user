<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="50dp"
    android:padding="10dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border_5dp"
        >
        <RelativeLayout
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:fontFamily="@font/notosans_black"
                android:gravity="center"
                android:text="가게검색"
                android:textColor="#343434"
                android:textSize="14sp" />
            <ImageButton
                android:id="@+id/close"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/close_button"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



        <EditText
            android:layout_below="@id/top_title"
            android:layout_marginVertical="20dp"
            android:id="@+id/search_body"
            android:background="@drawable/layout_edit_text_rounded_radius_5dp_stroke_1dp"
            android:hint="가게 검색"
            android:padding="10dp"
            android:maxLength="10"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_below="@id/search_body"
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="검색하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/layout_border_5dp_stroke_2dp_main"
            android:fontFamily="@font/notosans_bold"/>
    </RelativeLayout>
</RelativeLayout>