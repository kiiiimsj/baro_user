<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:fontFamily="@font/notosans_black"
            android:gravity="center"
            android:text="가게 검색"
            android:letterSpacing="0.3"
            android:textColor="#343434"
            android:textSize="14sp" />
        <ImageButton
            android:id="@+id/close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_close_24"
            android:background="@color/white"
            android:layout_width="50dp"
            android:layout_height="50dp"></ImageButton>
    </RelativeLayout>



    <EditText
        android:id="@+id/searchBody"
        android:hint="가게 검색"
        android:padding="20dp"
        android:maxLength="10"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
<!--    <TextView-->
<!--        android:padding="10dp"-->
<!--        android:id="@+id/mesgase"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:gravity="center"-->
<!--        android:textColor="@color/gray"-->
<!--        android:fontFamily="@font/bmhannapro"-->
<!--        android:textSize="16dp"-->
<!--        android:text="키워드를 입력해 주세요"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="검색하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:letterSpacing="0.2"
            android:background="@drawable/button_border_full"
            android:fontFamily="@font/notosans_bold"/>

    </LinearLayout>


</LinearLayout>