<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <RelativeLayout
            android:paddingVertical="12dp"
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginStart="20dp"
                android:id="@+id/menu_image"
                android:layout_alignParentStart="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:padding="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/menu_image"
                android:layout_toStartOf="@id/menu_default_price"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/menu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/menu_image"
                    android:layout_toStartOf="@id/menu_default_price"
                    android:layout_alignTop="@id/menu_default_price"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/notosans_bold"
                    android:text="아메리카노"
                    android:includeFontPadding="false"
                    android:textSize="11sp"
                    android:textColor="#343434"
                    android:letterSpacing="-0.03" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/subscription"
                    android:includeFontPadding="false"
                    android:layout_toEndOf="@id/menu_image"
                    android:layout_toStartOf="@id/menu_default_price"
                    android:layout_below="@id/menu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_light"
                    android:textSize="11sp"
                    android:textColor="#343434"
                    android:letterSpacing="-0.03"
                    android:text="abcdefg"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/sold_out"
                android:id="@+id/menu_default_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/arrow_right"
                android:layout_marginEnd="7dp"
                android:fontFamily="@font/notosans_black"
                android:includeFontPadding="false"
                android:text="1500원"
                android:textSize="11sp"
                android:textColor="@color/gray"
                android:drawablePadding="10dp"
                android:letterSpacing="-0.03" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_cancel_cross_line"
                android:background="@drawable/layout_cancel_line"
                android:layout_alignEnd="@id/menu_default_price"
                android:layout_alignStart="@id/menu_default_price"
                android:layout_alignTop="@id/menu_default_price"
                android:layout_alignBottom="@id/menu_price"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_triangle_small"
                android:id="@+id/arrow_right"
                android:layout_alignTop="@id/menu_price"
                android:layout_alignBottom="@id/menu_price"
                android:layout_toStartOf="@id/menu_price"
                android:layout_marginEnd="7dp"
                app:tint="@color/gray" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/sold_out"
                android:id="@+id/menu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/notosans_black"
                android:includeFontPadding="false"
                android:text="1500원"
                android:textSize="11sp"
                android:textColor="#343434"
                android:letterSpacing="-0.03" />

            <TextView
                android:id="@+id/menu_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <TextView
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:id="@+id/sold_out"
                android:includeFontPadding="false"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_border_3dp_black"
                android:fontFamily="@font/notosans_regular"
                android:text=" 품절 "
                android:textSize="10sp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>