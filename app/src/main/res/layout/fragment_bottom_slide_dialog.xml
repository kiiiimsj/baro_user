<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border_50dp_top_left_top_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/bottom_slide_dialog_title"
            android:text="알 림"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_below="@id/bottom_slide_dialog_title"
            android:layout_marginTop="10dp"
            android:id="@+id/bottom_slide_dialog_content"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button

            android:background="@drawable/close_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:id="@+id/bottom_slide_dialog_top_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/bottom_slide_dialog_bottom_button"
            android:layout_below="@id/bottom_slide_dialog_content"
            android:background="@drawable/layout_border_5dp_stroke_2dp_main"
            android:text="로그인 하러 가기"
            android:textColor="@color/white"
            android:fontFamily="@font/notosans_bold"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>