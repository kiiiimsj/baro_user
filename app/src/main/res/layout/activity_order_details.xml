<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/real_back"
    tools:context=".OrderDetails">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickBack"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="카페"
                android:textColor="@color/black"
                android:textSize="27sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/menu_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:includeFontPadding="false"
                            android:id="@+id/menuName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_black"
                            android:text="카페"
                            android:textSize="16sp"
                            android:textColor="#343434"
                            android:letterSpacing="-0.02" />
                        <LinearLayout
                            android:layout_marginTop="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <!--                        <ImageView-->
                            <!--                            android:layout_width="0dp"-->
                            <!--                            android:layout_height="15dp"-->
                            <!--                            android:layout_gravity="center"-->
                            <!--                            android:layout_margin="30px"-->
                            <!--                            android:layout_weight="1"-->
                            <!--                            android:src="@drawable/shoplic_currency_won_featured"/>-->
                            <LinearLayout
                                android:layout_marginBottom="14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/totalPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/main"
                                    android:text="0"
                                    android:letterSpacing="-0.02"
                                    android:fontFamily="@font/metropolis_semibold"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/notosans_bold"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.02"
                                    android:text="원"
                                    android:textColor="@color/main"
                                    android:textSize="16sp"></TextView>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <ImageButton
                                android:id="@+id/itemMinus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingVertical="10dp"
                                android:paddingRight="10dp"
                                android:background="@color/white"
                                android:src="@drawable/minus"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/itemCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/main"
                                android:textSize="16sp"
                                android:layout_marginHorizontal="10dp"
                                android:includeFontPadding="false"
                                android:letterSpacing="-0.02"
                                android:fontFamily="@font/notosans_bold"
                                android:text="1"/>

                            <ImageButton
                                android:id="@+id/itemPlus"
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@color/white"
                                android:src="@drawable/plus" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_above="@id/fix"
        android:layout_below="@id/content_layout"
        android:id="@+id/scroll_back"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/essentialOptionShell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c4c4c4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="필수 옵션"
                    android:textColor="#343434"
                    android:fontFamily="@font/notosans_bold"
                    android:paddingBottom="5dp"
                    android:textSize="14sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menuRecyler_Essential"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/expandListViewShell"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<!--                <View-->
<!--                    android:layout_marginRight="10dp"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"-->
<!--                    android:background="@color/gray"></View>-->
<!--                <TextView-->
<!--                    android:background="@color/white"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="15sp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:padding="5dp"-->
<!--                    android:layout_margin="3dp"-->
<!--                    android:text=" 퍼스널 옵션"/>-->
<!--                <View-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1px"-->
<!--                    android:background="@color/black"/>-->
<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/menuRecyler_nonEssential"-->
<!--                    android:scrollbars="vertical"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->
<!--                </androidx.recyclerview.widget.RecyclerView>-->
<!--                <View-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1px"-->
<!--                    android:background="@color/black"/>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c4c4c4"/>
                <ExpandableListView
                    android:id="@+id/menuExpand_NotEssential"
                    android:scrollbarThumbVertical="@color/black"
                    android:scrollbars="vertical"
                    android:transcriptMode="alwaysScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                    android:divider="@null"
                    android:childDivider="@null">
                </ExpandableListView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/fix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#8D00F1"
        android:fontFamily="@font/bmhannapro"
        android:text="장바구니 담기"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>