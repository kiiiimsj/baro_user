<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/category_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/main"
                app:tabTextColor="@color/indicator_unselect_text_color"
                app:tabGravity="center"
                app:tabIndicatorGravity="center"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="25dp"
                app:tabMode="scrollable"
                app:tabRippleColor="@color/invisible" />
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_below="@id/tab_layout"
            android:id="@+id/scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menu_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:scrollbars="vertical" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:id="@+id/discount_text_view_layout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/layout_border_10dp_stroke_1dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            >
            <TextView
                android:id="@+id/discount_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BARO 할인 | "
                android:fontFamily="@font/metropolis_bold"
                android:textColor="@color/main"
                android:drawableTint="@color/main"
                android:textSize="11sp"
                android:includeFontPadding="false"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:drawablePadding="12dp"
                app:drawableStartCompat="@drawable/white_timer_" />
            <TextView
                android:layout_toEndOf="@id/discount_text_view"
                android:id="@+id/discount_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="18%"
                android:textSize="14sp"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:fontFamily="@font/metropolis_bold"
                android:textColor="@color/main"
                />
            <TextView
                android:id="@+id/discount_behind_text_view"
                android:layout_toEndOf="@id/discount_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 적용중!"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:fontFamily="@font/metropolis_bold"
                android:textColor="@color/main"
                android:includeFontPadding="false"
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>