<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border_10dp_stroke_3dp">
        <TextView
            android:id="@+id/coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="첫 가입 이벤트 할인 쿠폰"
            android:textSize="20dp"
            android:fontFamily="@font/notosans_black"
            android:textColor="#8333e6"
            android:includeFontPadding="false"
            android:layout_below="@id/coupon_condition"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:textColor="#c4c4c4"
            android:id="@+id/coupon_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="10000원 이상 구매"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/coupon_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coupon_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="30% 할인권"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="#343434"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            />

        <TextView
            android:textColor="#c4c4c4"
            android:id="@+id/coupon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/coupon_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:text="~2020-08-20" />

        <TextView
            android:id="@+id/coupon_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="30"
            />
        <TextView
            android:id="@+id/coupon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="1"
            />
    </RelativeLayout>
</LinearLayout>