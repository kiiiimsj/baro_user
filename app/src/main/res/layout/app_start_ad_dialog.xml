<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ad_image"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/ad_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button

            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/close_ever"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_border_full"
            android:fontFamily="@font/notosans_black"
            android:includeFontPadding="false"
            android:text="다시 보지 않기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp" />



        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/just_close"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_border_empty"
            android:fontFamily="@font/notosans_black"
            android:includeFontPadding="false"
            android:text="닫기"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>