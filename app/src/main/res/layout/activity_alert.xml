<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context="com.tpn.baro.Alert">
    <fragment
        android:id="@+id/top_bar"
        android:name="com.tpn.baro.Fragment.TopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/alert_top_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"

                android:background="@drawable/layout_alert_title"
                android:elevation="8dp"
                android:paddingHorizontal="20dp"
                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/white"
                >
                <TextView
                    android:id="@+id/alert_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:text="10월 이벤트"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/alert_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/alert_title"
                    android:text="2020년 9월 12일"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    android:layout_marginHorizontal="10dp"
                    android:layout_below="@id/alert_start_date"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/alert_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_alert_content"
                android:elevation="8dp"
                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/alert_top_area"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="20dp"
                >
                <TextView
                    android:id="@+id/alert_content"
                    android:text="10월 이벤트로 쿠폰 지급!"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>