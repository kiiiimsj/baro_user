<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/main"
    tools:context="com.tpn.baro.ChangeEmail2">
    <TextView
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:includeFontPadding="false"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/notosans_regular"
        android:text="BARO"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:layout_below="@id/imageView"
        android:text="이메일 재설정"
        android:letterSpacing="-0.02"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_black"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        android:layout_marginTop="27dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/layout_border_50dp_top_left_top_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:letterSpacing="-0.02"
            android:layout_gravity="center"
            android:text="이메일 변경이 완료되었습니다"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:layout_marginTop="58dp"
            />
        <Button
            android:id="@+id/go_to_my_page"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_border_5dp_stroke_2dp_main"
            android:onClick="goToMyPage"
            android:text="마이페이지로 돌아가기"
            android:textSize="16dp"
            android:fontFamily="@font/notosans_bold"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>