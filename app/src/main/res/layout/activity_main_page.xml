<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainPage">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/baro_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:src="@drawable/baro_logo"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/baro_logo"
                android:layout_marginTop="2.2dp"
                android:letterSpacing="-0.03"
                android:background="@color/white"
                android:fontFamily="@font/notosans_bold"
                android:textStyle="bold"
                android:text="동작구 상도동"
                android:textColor="@color/more_bright_gray"
                android:includeFontPadding="false"
                android:layout_marginBottom="17dp"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/address"
                android:layout_marginTop="9dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/address"
                android:src="@drawable/arrow_down" />
            <ImageView
                android:id="@+id/search_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_alignTop="@id/baro_logo"
                android:src="@drawable/search"
                android:layout_toStartOf="@id/alert_fragment"
                />

            <fragment
                android:id="@+id/alert_fragment"
                android:name="com.example.wantchu.Fragment.AlarmBell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18dp"
                android:layout_alignTop="@id/baro_logo"
                />
        </RelativeLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_menu"
            android:layout_below="@id/header">
            <ScrollView
                android:id="@+id/advertise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.wantchu.helperClass.ViewPagerCustomDuration
                        android:id="@+id/info_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/gray" />
                    <TextView
                        android:id="@+id/event_count"
                        android:background="@drawable/layout_border_5dp"
                        android:backgroundTintMode="src_in"
                        android:backgroundTint="@color/transparent_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="5dp"
                        android:letterSpacing="-0.03"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@id/info_image"
                        android:fontFamily="@font/metropolis_regular"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="1  /  2"
                        android:layout_margin="16dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/info_image"
                        />
                    <View
                        android:layout_below="@id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/home_background"/>
                    <TextView
                        android:id="@+id/ultra_store_title"
                        android:layout_below="@id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginEnd="16dp"
                        android:includeFontPadding="false"
                        android:text="@string/ultra_store_label"
                        android:textSize="14sp"
                        android:textColor="@color/more_bright_gray"
                        android:textStyle="bold"
                        android:letterSpacing="-0.02"
                        android:fontFamily="@font/notosans_bold" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@id/ultra_store_title"
                        android:id="@+id/ultra_store"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_below="@id/ultra_store"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/home_background"/>
                    <TextView
                        android:id="@+id/new_store_title"
                        android:layout_below="@id/ultra_store"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/new_store_label"
                        android:layout_marginTop="19dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginEnd="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/more_bright_gray"
                        android:textStyle="normal"
                        android:letterSpacing="-0.02"
                        android:fontFamily="@font/notosans_bold"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@id/new_store_title"
                        android:id="@+id/new_store"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/new_store"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray"
                        android:padding="10dp"
                        android:fontFamily="@font/notosans_regular"
                        android:textSize="12sp"
                        android:textColor="#434343"
                        android:includeFontPadding="false"
                        android:text="Contect
                        \n\n BARO 제휴 문의 또는 서비스 이용 문의가 있으시다면 아래의 방법으로 언제든지 문의주세요!
                        \n\n 이메일 : ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ
                        \n 전화 : 02 ) 000 - 0000
                        \n\n (주) 티피엔
                        \n 사업자등록번호 : 111-11-11111
                        \n 통신판매업신고번호 : 0000 - 서울동작 - 0000
                        \n 주소 : 서울특별시 동작구 숭실대학교 창신관 113호"/>
                </RelativeLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <fragment
            android:id="@+id/cart_click_button"
            android:name="com.example.wantchu.Fragment.OrderListCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            
            android:layout_marginBottom="80dp" />

        <fragment
            android:id="@+id/bottom_menu"
            android:name="com.example.wantchu.Fragment.BottomMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundDimEnabled="false"
            android:windowBackground="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
