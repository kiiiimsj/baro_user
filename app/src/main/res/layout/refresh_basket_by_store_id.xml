<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="장바구니 초기화"
        android:textColor="#343434"
        android:textSize="14sp"
        android:fontFamily="@font/notosans_black"
        android:includeFontPadding="false"/>

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="#000000"/>-->

    <TextView
        android:layout_below="@id/title"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:fontFamily="@font/notosans_regular"
        android:textColor="#343434"
        android:textSize="12sp"
        android:text="다른점포의 상품이 장바구니에 존재합니다\n비우고 새상품을 담으시겠습니까?"/>


    <LinearLayout
        android:layout_below="@id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="취 소"
            android:textColor="@color/main"
            android:textSize="16sp"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/layout_border_5dp_border_main"/>
        <Button
            android:id="@+id/okay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="비 우 기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/layout_border_5dp_stroke_2dp_main"/>





    </LinearLayout>


</RelativeLayout>