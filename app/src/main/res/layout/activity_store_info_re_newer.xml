<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreInfoReNewer">
    <RelativeLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <fragment
            android:id="@+id/top_bar"
            android:name="com.example.wantchu.Fragment.TopBar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.google.android.material.tabs.TabLayout
            android:layout_below="@id/top_bar"
            android:id="@+id/tab_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="5dp">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/order_history_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="메뉴"
                android:textColor="@color/white" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/calc_history_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="가게정보"
                android:textColor="@color/white" />
        </com.google.android.material.tabs.TabLayout>
        <RelativeLayout
            android:layout_below="@id/tab_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_menu"
            >
            <fragment
                android:id="@+id/store_list_fragment"
                android:name="com.example.wantchu.Fragment.StoreMenuFragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <fragment
                android:id="@+id/store_detail_info_fragment"
                android:name="com.example.wantchu.Fragment.StoreDetailInfoFragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <fragment
            android:id="@+id/cart_click_button"
            android:name="com.example.wantchu.Fragment.OrderListCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"/>
        <fragment
            android:id="@+id/bottom_menu"
            android:name="com.example.wantchu.Fragment.BottomMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundDimEnabled="false"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>