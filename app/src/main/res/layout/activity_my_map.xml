<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyMap">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp">
        <ImageView
            android:id="@+id/back_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickBack"
            android:padding="10dp"
            android:src="@drawable/general_back_icon" />

        <TextView
            android:id="@+id/type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/brandon_grotesque_black"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="주변 가게"
            android:textSize="25sp" />
        <Button
            android:id="@+id/location_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="위치 설정"
            />
    </RelativeLayout>
    <TextView
        android:layout_below="@id/top_bar"
        android:id="@+id/show_latlng_address"
        android:text="동작구 사당로 41-2"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_below="@id/show_latlng_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <fragment
        class="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/over_lay_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/marker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="여기로 위치 설정"
            />
        <ImageView
            android:id="@+id/marker_image"
            android:layout_below="@id/marker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/flag_ic_android"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/set_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_border_full"
        android:textColor="@color/black"
        android:text="현재 위치로 설정하기"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/store_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/store_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/plus"
            />
        <TextView
            android:id="@+id/store_title"
            android:layout_toRightOf="@id/store_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test cafe"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_below="@id/store_title"
            android:id="@+id/address"
            android:layout_toRightOf="@id/store_preview"
            android:text="서울시 동작구 성수동"
            android:maxLength="15"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            />
        <TextView
            android:id="@+id/distance"
            android:layout_below="@id/store_title"
            android:paddingRight="20dp"
            android:text="350m"
            android:layout_toRightOf="@id/address"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>